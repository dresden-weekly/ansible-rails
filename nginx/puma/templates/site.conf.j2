# {{ ansible_managed }}

upstream {{ site_name | default(app_name, true) }} {
{% for app in groups['app'] -%}
  server {{ hostvars[app].APP_URL }};
{% endfor -%}
}

server {
  server_name {{ site_domain | default(app_domain, true) | default('""', true) }};
  listen {{ site_port }};
  root {{ site_path | default(app_path, true) }}/current/public;

  location / {
    try_files $uri $uri/index.html $uri.html @app;

    expires 1y;
    add_header Cache-Control public;
    add_header Last-Modified "";
    add_header ETag "";
  }

  location @app {
    proxy_pass http://{{ site_name | default(app_name, true) }};
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_redirect off;
    proxy_read_timeout 10;
    proxy_http_version 1.1;
  }

  error_page 500 502 503 504 /500.html;

  location @error_page {
    root {{ site_path | default(app_path, true) }}/current/public; # location of 500.html file
    internal;
    rewrite ^ /500.html;
    break;
  }
}
